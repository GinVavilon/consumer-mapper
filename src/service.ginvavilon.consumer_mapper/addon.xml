<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.ginvavilon.consumer_mapper"
       name="Consumer Mapper Service"
       version="1.0.0"
       provider-name="GinVavilon">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.service" library="default.py">
    <start-on-system-start>true</start-on-system-start>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Automatically run consumer_mapper on Kodi startup.</summary>
    <description lang="en_GB">This service will run the consumer_mapper script when Kodi starts.</description>
    <platform>all</platform>
    <license>GNU GENERAL PUBLIC LICENSE Version 2</license>
  </extension>
</addon>
